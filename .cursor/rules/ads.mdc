public class AdSystem : System<AdSystem>
{
  public override void Awake()
  {
    if (Network.IsServer)
    {
      Ads.SetRewardHandler(OnAdReward);
    }
  }

  private bool OnAdReward(Player _player, string adId)
  {
    // Cast to their custom player
    var player = (MyPlayer)_player;

    if (adId == "ANY_STRING")
    {
